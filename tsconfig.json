{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-native",
    "strict": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./*"]
    },
    "typeRoots": ["./node_modules/@types", "./@types"]
  },
  "include": [
    "**/*.ts",
    "**/*.js",
    "**/*.jsx",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "src/**/*",
    "App.tsx"
  ],
  "extends": "expo/tsconfig.base"
}
